<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerProductCategoryActivity">


    <TextView

        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/add_new_product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/liner1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:contentDescription="@string/t_shirt"
            app:srcCompat="@drawable/tshirts" />

        <ImageView
            android:id="@+id/imageView_sports"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/sports" />


        <ImageView
            android:id="@+id/imageView_feml_dresses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/imageView_swetshirt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/sweather" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner1_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_glsses"
            android:layout_width="70dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/imageView_pursebge"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/purses_bags" />


        <ImageView
            android:id="@+id/imageView_hats"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/hats" />

        <ImageView
            android:id="@+id/imageView_shoess"

            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/shoess" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner2_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_headphoness"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/headphoness" />

        <ImageView
            android:id="@+id/imageView_laptops"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/laptops" />


        <ImageView
            android:id="@+id/imageView_watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/watches" />

        <ImageView
            android:id="@+id/imageView_mobiles"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"

            app:srcCompat="@drawable/mobiles" />

    </LinearLayout>

</RelativeLayout>