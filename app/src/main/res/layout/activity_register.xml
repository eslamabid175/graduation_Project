<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".loginandjoin.RegisterActivity">

    <ImageView
        android:id="@+id/register_app_logo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/applogo" />

    <EditText
        android:id="@+id/register_user_nme_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="User Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_user_nme_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_emil_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_number_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Emial"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_pssword_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_emil_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_pssword2_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_pssword_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Re Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/register_pssword2_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:text="Create account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp" />


    <EditText
        android:id="@+id/register_confirmm_admin_input"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_btn"


        android:layout_alignParentEnd="true"

        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Confirm Code"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/Colorrprimary"
        android:textColorHint="@color/Colorrprimary"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <!--    <TextView-->
    <!--        android:id="@+id/register_admin_link"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/register_btn"-->
    <!--        android:layout_alignParentStart="true"-->
    <!--        android:layout_marginStart="25dp"-->
    <!--        android:layout_marginLeft="80dp"-->
    <!--        android:text="Register as admin"-->
    <!--        android:textColor="@color/Colorrprimary"-->
    <!--        android:textSize="20sp"-->
    <!--        android:textStyle="bold" />-->

    <com.rey.material.widget.CheckBox
        android:id="@+id/register_dmin_checkbox"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:gravity="center_vertical"
        android:text="Register as an admin"
        android:textColor="@color/Colorrprimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cbd_strokeColor="@color/Colorrprimary" />


</RelativeLayout>